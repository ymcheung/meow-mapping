---
import { SITE_NAME_TW, SITE_DESCRIPTION_TW, categories } from '@/consts';
import Layout from '@layouts/Index.astro';
import { getCollection } from 'astro:content';
import PostPreviewList from '@/pages/_PostPreviewList.astro';
import PostPreview from '@/pages/tw/_PostPreview.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';
import IconLanguage from '@assets/language.svg';

const posts = await getCollection('postsTw');

function filterPosts(categorySlug: string) {
  return posts.filter(({ data: { category } }) => {
    return categorySlug === category;
  });
}

const dateModified = '2025-08-24T08:30:00+08:00';
---

<Layout
  title={SITE_NAME_TW}
  description={SITE_DESCRIPTION_TW}
  dateModified={dateModified}
>
  <main>
    <strong class="pageTitle">這些地方是？</strong>
    <p class="description">
      以實際的自身體驗，找出超棒的貓聚集地。紀錄親身前往找貓點時，一路上搭乘交通工具的經驗。
    </p>
    <div>
      <span class="languageSwitch">
        <IconLanguage width={20} height={20} />
        <span class="label">English</span>
        <a class="link" href={getRelativeLocaleUrl('en')}></a>
      </span>
    </div>
    {
      categories.map(({ tw: { title }, slug }) => {
        const postsOfCategory = filterPosts(slug);

        const postsOfCategorySorted = postsOfCategory.sort((a, b) => {
          const {
            data: { dateVisited: olderDateVisited }
          } = a;
          const {
            data: { dateVisited: newerDateVisited }
          } = b;

          if (olderDateVisited > newerDateVisited) {
            return -1;
          }

          return 0;
        });

        return (
          postsOfCategory.length > 0 && (
            <>
              <h2 class="categoryTitle">{title}</h2>
              <PostPreviewList>
                {postsOfCategorySorted.map(
                  ({
                    id,
                    data: {
                      title,
                      transportation: { from },
                      dateVisited
                    }
                  }) => (
                    <PostPreview
                      categorySlug={slug}
                      postId={id}
                      title={title}
                      from={from}
                      dateVisited={dateVisited}
                    />
                  )
                )}
              </PostPreviewList>
            </>
          )
        );
      })
    }
  </main>
  <aside>
    <strong class="pageTitle">我的找貓點經驗</strong>
    <p class="description">
      我的自助旅行不是為了在個人資料放上國旗，而是找貓。我從 2014
      年開始就這樣自助旅行，而現在也跟隊友一起行動
    </p>
  </aside>
</Layout>

<style>
  @import 'open-props/media';
  @import 'open-props/colors-hsl';

  main {
    padding-inline: var(--size-3);
    padding-block-start: var(--size-4);
  }

  aside {
    margin-block-start: var(--size-8);
    padding-inline: var(--size-3);
    padding-block-end: var(--size-11);
  }

  @media (--md-n-above) {
    main,
    aside {
      max-width: var(--size-content-3);
      margin-inline: auto;
      padding-inline: 0;
    }
  }

  .pageTitle {
    display: block;
    color: hsl(var(--gray-7-hsl));
    font-size: var(--font-size-fluid-2);
    transform: skewY(-2deg);
  }

  @media (--OSdark) {
    .pageTitle {
      color: hsl(var(--gray-4-hsl));
    }
  }

  .languageSwitch {
    display: grid;
    width: max-content;
    grid-template-columns: auto 1fr;
    align-content: center;
    column-gap: var(--size-2);
    position: relative;
    margin-inline-start: auto;
    margin-inline-end: 0;
    padding: var(--size-2);
    background-color: hsl(var(--gray-2-hsl));
    border-radius: var(--radius-2);
  }

  .languageSwitch .label {
    line-height: var(--font-lineheight-1);
  }

  @media (--OSdark) {
    .languageSwitch {
      background-color: hsl(var(--gray-8-hsl));
    }
  }

  .languageSwitch .link {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    inset: 0;
  }

  .description {
    margin-block-start: var(--size-2);
    color: hsl(var(--gray-7-hsl));
    font-size: var(--font-size-fluid-1);
    transform: skewY(-2deg);
  }

  @media (--OSdark) {
    .description {
      color: hsl(var(--gray-5-hsl));
    }
  }

  .categoryTitle {
    margin-block-start: var(--size-4);
    color: hsl(var(--gray-7-hsl));
    font-size: var(--font-size-fluid-2);
    font-weight: 700;
    transform: skewY(-2deg);
  }

  .categoryTitle:first-of-type {
    margin-block-start: var(--size-8);
  }

  @media (--OSdark) {
    .categoryTitle {
      color: hsl(var(--gray-4-hsl));
    }
  }
</style>
